@model IEnumerable<WebApp.Data.Entity.Lib>

@{
    ViewData["Title"] = "Index";
}

<h1>Entity Libs</h1>
<p>
    <a asp-action="Create">Create Lib</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Namespace)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedTime)
            </th>
            <th>
                Operate
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <span class="badge badge-primary">
                        @item.Language
                    </span>
                    <a asp-controller="Entities" asp-action="Index" class="text-dark">
                        @Html.DisplayFor(modelItem => item.Namespace)
                    </a>
                    @if (item.IsValid)
                    {
                        <span>✔</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @item.CreatedTime.ToLocalTime().ToString("yy-MM-dd HH:mm")
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
